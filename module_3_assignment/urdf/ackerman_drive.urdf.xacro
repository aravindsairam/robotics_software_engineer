<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="ackerman_drive">

    <link name="base_footprint">
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.75 0.40 0.1"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1"/>
            </material>
        </visual>
    </link>

    <joint name="base_footprint_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

    <!-- xacro for wheels  -->
    <xacro:macro name="wheel" params="name x y parent">

        <link name="${name}_wheel">
            <visual>
                <geometry>
                    <cylinder radius="0.15" length="0.1"/>
                </geometry>
                <material name="gray">
                    <color rgba="0.2 0.2 0.2 1"/>
                </material>
            </visual>
        </link>

         <joint name="${name}_wheel_joint" type="continuous">
            <parent link="${parent}"/>
            <child link="${name}_wheel"/>
            <origin xyz="${x} ${y} 0" rpy="1.57 0 0.0"/>
            <axis xyz="0 0 1"/>
        </joint>
    </xacro:macro>

    <xacro:wheel name="front_right" x="0.10" y="0.25" parent="front_steer"/>
    <xacro:wheel name="front_left" x="0.10" y="-0.25" parent="front_steer"/>
    <xacro:wheel name="rear_right" x="-0.25" y="-0.25" parent="base_link"/>
    <xacro:wheel name="rear_left" x="-0.25" y="0.25" parent="base_link"/>

    <link name="front_steer">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.02"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="front_steer_joint" type="revolute">
        <parent link="base_link"/>
        <child link="front_steer"/>
        <origin xyz="0.15 0.0 0.0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.122173" upper="0.122173" effort="1.0" velocity="1.0"/>
    </joint>

</robot>